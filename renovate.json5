{
  "extends": [
    "config:base",
    ":separatePatchReleases"
  ],
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  enabledManagers: [
    "dockerfile"
  ],
  //  includePaths: [
  //    "folder-to-include/**"
