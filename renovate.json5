{
  "extends": [
    "config:base"
  ],
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "packageRules": [
    // disable all packages
//    {
//      "packagePatterns": [
//        "*"
//      ],
//      "enabled": false,
//    },
    // only enable packages within folder-to-include that are dockerfiles and only minor and patch updates
    {
      "enabled": true,
      "groupName": "DBRE packages",
      "matchManagers": [
        "dockerfile"
      ],
      "paths": [
        "folder-to-include/**",
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      // I enabled postUpgradeTasks on my self hosted renovate
      "allowPostUpgradeCommandTemplating": true,
      "postUpgradeTasks": {
        "commands": [
          "find . -name Dockerfile -type f -exec sed -i 's/LABEL version=\"{{{currentVersion}}}\"/LABEL version=\"{{{newVersion}}}\"/g' {} \\;"
        ],
        "fileFilters": [
          "dbre/**/Dockerfile"
        ],
        "executionMode": "update"
      }
    },
    // only enable packages within folder-to-include/mariadb that are dockerfiles and only patch
    {
      "enabled": true,
      "groupName": "mariadb packages",
      "matchManagers": [
        "dockerfile"
      ],
      "paths": [
        "folder-to-include/mariadb/**",
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ]
}
