    "packageRules": [
      // disable all packages
      {
        "packagePatterns": [
          "*"
        ],
        "enabled": false
      },
      // only enable packages within folder-to-include that are dockerfiles and only minor and patch updates
      {
        "enabled": true,
        "groupName": "DBRE packages",
        "paths": [
          "folder-to-include/elastic/**",
          "folder-to-include/mariadb/**"
        ],
        matchUpdateTypes: [
          "minor"
